<script define:vars={{ songs }}>
  // 初始化 MusicPlayer 的函数
  function initializeMusicPlayer() {
    // 检查AmplitudeJS是否已加载
    if (typeof window.Amplitude === 'undefined') {
      console.error('AmplitudeJS 未加载');
      return;
    }

    // 检查是否存在播放器容器
    const playerContainer = document.getElementById('amplitude-player');
    if (!playerContainer) {
      console.log('MusicPlayer 容器不存在，跳过初始化');
      return;
    }

    // 清理之前的实例
    if (window.Amplitude && typeof window.Amplitude.pause === 'function') {
      try {
        window.Amplitude.pause();
        // 清理之前的音频元素
        const audio = window.Amplitude.getAudio();
        if (audio) {
          audio.pause();
          audio.src = '';
        }
      } catch (error) {
        console.log('清理之前的 Amplitude 实例时出错:', error);
      }
    }

    try {
      // 添加鼠标悬停效果
      let songElements = document.getElementsByClassName('song');
      
      for (let i = 0; i < songElements.length; i++) {
        // 移除之前的事件监听器（如果存在）
        songElements[i].removeEventListener('mouseover', songElements[i]._mouseoverHandler);
        songElements[i].removeEventListener('mouseout', songElements[i]._mouseoutHandler);
        songElements[i].removeEventListener('click', songElements[i]._clickHandler);
        
        // 创建新的事件处理函数
        songElements[i]._mouseoverHandler = function() {
          const currentTheme = document.documentElement.getAttribute('data-theme');
          const isLight = !currentTheme || currentTheme === 'light';
          
          this.style.backgroundColor = 'var(--at-color-bg)';
          this.querySelectorAll('.song-meta-data .song-title')[0].style.color = isLight ? '#000000' : 'var(--foreground)';
          this.querySelectorAll('.song-meta-data .song-artist')[0].style.color = isLight ? '#333333' : 'var(--accent)';
          
          if (!this.classList.contains('amplitude-active-song-container')) {
            this.querySelectorAll('.play-button-container')[0].style.display = 'block';
          }
          
          this.querySelectorAll('.song-duration')[0].style.color = isLight ? '#333333' : 'var(--accent)';
        };
        
        songElements[i]._mouseoutHandler = function() {
          const currentTheme = document.documentElement.getAttribute('data-theme');
          const isLight = !currentTheme || currentTheme === 'light';
          
          this.style.backgroundColor = isLight ? '#FFFFFF' : 'var(--background)';
          this.querySelectorAll('.song-meta-data .song-title')[0].style.color = isLight ? '#272726' : 'var(--foreground)';
          this.querySelectorAll('.song-meta-data .song-artist')[0].style.color = isLight ? '#607D8B' : 'var(--accent)';
          this.querySelectorAll('.play-button-container')[0].style.display = 'none';
          this.querySelectorAll('.song-duration')[0].style.color = isLight ? '#607D8B' : 'var(--accent)';
        };
        
        songElements[i]._clickHandler = function() {
          this.querySelectorAll('.play-button-container')[0].style.display = 'none';
        };
        
        // 添加新的事件监听器
        songElements[i].addEventListener('mouseover', songElements[i]._mouseoverHandler);
        songElements[i].addEventListener('mouseout', songElements[i]._mouseoutHandler);
        songElements[i].addEventListener('click', songElements[i]._clickHandler);
      }

      // 初始化AmplitudeJS
      window.Amplitude.init({
        songs: songs,
        volume: 100,
        shuffle_on: false,
        preload: "metadata",
        callbacks: {
          play: function() {
            console.log('播放开始');
          },
          pause: function() {
            console.log('播放暂停');
          },
          song_change: function() {
            console.log('歌曲切换');
            // 动态更新当前歌曲的duration
            updateCurrentSongDuration();
          },
          loadedmetadata: function() {
            console.log('元数据加载完成');
            // 当元数据加载完成时，更新所有歌曲的duration
            updateAllSongsDuration();
          }
        },
        waveforms: {
          sample_rate: 50
        }
      });

      // 动态更新当前歌曲duration的函数
      function updateCurrentSongDuration() {
        const currentSongIndex = window.Amplitude.getActiveSongMetadata().index;
        const audio = window.Amplitude.getAudio();
        
        if (audio && !isNaN(audio.duration)) {
          const minutes = Math.floor(audio.duration / 60);
          const seconds = Math.floor(audio.duration % 60);
          const formattedDuration = `${minutes}:${seconds.toString().padStart(2, '0')}`;
          
          // 更新歌曲列表中的duration显示
          const durationElement = document.querySelector(`[data-song-index="${currentSongIndex}"]`);
          if (durationElement) {
            durationElement.textContent = formattedDuration;
          }
        }
      }

      // 更新所有歌曲duration的函数
      function updateAllSongsDuration() {
        songs.forEach((song, index) => {
          // 创建临时audio元素来获取duration
          const tempAudio = new Audio();
          tempAudio.preload = 'metadata';
          
          tempAudio.addEventListener('loadedmetadata', function() {
            if (!isNaN(this.duration)) {
              const minutes = Math.floor(this.duration / 60);
              const seconds = Math.floor(this.duration % 60);
              const formattedDuration = `${minutes}:${seconds.toString().padStart(2, '0')}`;
              
              // 更新对应的duration显示
              const durationElement = document.querySelector(`[data-song-index="${index}"]`);
              if (durationElement) {
                durationElement.textContent = formattedDuration;
              }
            }
          });
          
          tempAudio.src = song.url;
        });
      }

      console.log('AmplitudeJS 初始化成功');

    } catch (error) {
      console.error('AmplitudeJS 初始化失败:', error);
    }
  }

  // 页面加载完成时初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeMusicPlayer);
  } else {
    // 如果 DOM 已经加载完成，直接初始化
    initializeMusicPlayer();
  }

  // Astro 页面切换事件监听
  document.addEventListener('astro:page-load', function() {
    console.log('Astro 页面加载完成，重新初始化 MusicPlayer');
    // 延迟一点时间确保 DOM 完全渲染
    setTimeout(initializeMusicPlayer, 100);
  });

  // 主题切换监听器
  function handleThemeChange() {
    // 重新绑定所有歌曲元素的事件处理器以适应新主题
    const songElements = document.querySelectorAll('.song.amplitude-song-container');
    for (let i = 0; i < songElements.length; i++) {
      // 移除旧的事件监听器
      if (songElements[i]._mouseoverHandler) {
        songElements[i].removeEventListener('mouseover', songElements[i]._mouseoverHandler);
      }
      if (songElements[i]._mouseoutHandler) {
        songElements[i].removeEventListener('mouseout', songElements[i]._mouseoutHandler);
      }
      
      // 重新创建主题感知的事件处理函数
      songElements[i]._mouseoverHandler = function() {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const isLight = !currentTheme || currentTheme === 'light';
        
        this.style.backgroundColor = isLight ? '#F5F5F5' : 'var(--muted)';
        this.querySelectorAll('.song-meta-data .song-title')[0].style.color = isLight ? '#000000' : 'var(--foreground)';
        this.querySelectorAll('.song-meta-data .song-artist')[0].style.color = isLight ? '#333333' : 'var(--accent)';
        this.querySelectorAll('.play-button-container')[0].style.display = 'block';
        this.querySelectorAll('.song-duration')[0].style.color = isLight ? '#333333' : 'var(--accent)';
      };
      
      songElements[i]._mouseoutHandler = function() {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const isLight = !currentTheme || currentTheme === 'light';
        
        this.style.backgroundColor = isLight ? '#FFFFFF' : 'var(--background)';
        this.querySelectorAll('.song-meta-data .song-title')[0].style.color = isLight ? '#272726' : 'var(--foreground)';
        this.querySelectorAll('.song-meta-data .song-artist')[0].style.color = isLight ? '#607D8B' : 'var(--accent)';
        this.querySelectorAll('.play-button-container')[0].style.display = 'none';
        this.querySelectorAll('.song-duration')[0].style.color = isLight ? '#607D8B' : 'var(--accent)';
      };
      
      // 重新添加事件监听器
      songElements[i].addEventListener('mouseover', songElements[i]._mouseoverHandler);
      songElements[i].addEventListener('mouseout', songElements[i]._mouseoutHandler);
    }
  }

  // 监听主题切换事件
  const themeObserver = new MutationObserver(function(mutations) {
    mutations.forEach(function(mutation) {
      if (mutation.type === 'attributes' && mutation.attributeName === 'data-theme') {
        handleThemeChange();
      }
    });
  });

  // 开始观察主题变化
  themeObserver.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ['data-theme']
  });

  // Astro页面切换前的清理
  document.addEventListener('astro:before-preparation', function() {
    console.log('Astro 页面切换前清理 MusicPlayer');
    if (window.Amplitude && typeof window.Amplitude.pause === 'function') {
      try {
        window.Amplitude.pause();
        // 清理音频元素
        const audio = window.Amplitude.getAudio();
        if (audio) {
          audio.pause();
          audio.src = '';
        }
      } catch (error) {
        console.log('清理 Amplitude 时出错:', error);
      }
    }
    
    // 清理主题观察器
    if (themeObserver) {
      themeObserver.disconnect();
    }
  });
</script>