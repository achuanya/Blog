{
  "name": "blog-admin",
  "version": "1.0.0",
  "description": "Astro Paper 博客后台管理系统",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "dev:sass": "sass --watch ./src/styles/admin.scss:./src/styles/admin.css",
    "dev:tw": "tailwindcss -i ./src/styles/admin.css -o ./public/assets/admin.css --watch",
    "dev:css": "concurrently -k -n sass,tw \"npm:dev:sass\" \"npm:dev:tw\"",
    "build:css": "sass ./src/styles/admin.scss ./src/styles/admin.css && tailwindcss -i ./src/styles/admin.css -o ./public/assets/admin.css --minify"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "simplemde": "^1.11.2",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "sass": "^1.77.6",
    "tailwindcss": "^3.4.17"
  }
}