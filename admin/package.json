{
  "name": "blog-admin",
  "version": "1.0.0",
  "description": "Astro Paper 博客后台管理系统",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n server,vite \"npm:dev:server\" \"npm:dev:vite\"",
    "dev:server": "node --watch server.js",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "build:css": "echo 'CSS is now handled by Vite build process'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "simplemde": "^1.11.2",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.4.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "sass": "^1.77.6",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.10"
  }
}